<?xml version="1.0" encoding="UTF-8"?>
<!-- orm native query orm.xml example을 구글링해서 enetity-mappings를 사용한다. -->
<entity-mappings
	xmlns="http://java.sun.com/xml/ns/persistence/orm"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence/orm http://java.sun.com/xml/ns/persistence/orm_2_0.xsd"
	version="2.0">

	<!-- name 속성에는 실행할 메소드 이름을 적는다. -->
	<!-- result-class 속성에는 sql 명령 실행 후 리턴되는 엔티티를 풀 패키지 이름과 함께쓴다. -->
	<named-native-query name="Comment.findByNickname" result-class="com.tjoeun.firstProject.entity.Comment">
        <query>
        	<![CDATA[
        	select * from comment where nickname = :nickname
        	]]>
        </query>
    </named-native-query>

</entity-mappings>